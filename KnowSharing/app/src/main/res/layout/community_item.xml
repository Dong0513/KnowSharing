<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#d9d9d9"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/com_head_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/com_head_portrait"
            android:text="用户名"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/com_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/community_item_uploadtime" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/relativeLayout1">


        <TextView
            android:id="@+id/com_text_content"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="文本内容"
            android:gravity="center"
            android:textSize="30dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/com_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/com_comment_numbers"
            android:src="@drawable/icon_collect" />

        <TextView
            android:id="@+id/com_comment_numbers"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/com_like"
            android:gravity="center"
            android:text="30" />


        <ImageView
            android:id="@+id/com_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/com_like_numbers"
            android:src="@drawable/icon_work_like" />

        <TextView
            android:id="@+id/com_like_numbers"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="30" />


    </RelativeLayout>


</RelativeLayout>